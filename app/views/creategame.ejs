<div class="creategame">
	<div class="container">
		<div class="row">
			<div class="col-xs-8 col-sm-8 col-md-8 content-background">
				<div class="row">
					<h2 class="title"><b>Game settings</b></h2>
				</div>
				<form method="post" class="form-horizontal" role="form">
					<div class="row">
					<div class="col-md-12"><b>Please select the number of games needed to win:</b></div>
					</div>
					<div class="row">
						<div class="radio">
	  						<div class="col-md-4">
	  						</div>
	  						<div class="col-md-1">
						    	<input type="radio" name="rounds" value="2/3" ng-click="createGame.setRounds(3)" checked>2/3
	  						 </div>
	  						 <div class="col-md-1">
						    	<input type="radio" name="rounds" value="3/5" ng-click="createGame.setRounds(5)">3/5
	  						 </div>
	  						 <div class="col-md-1">
						    	<input type="radio" name="rounds" value="4/7" ng-click="createGame.setRounds(7)">4/7
	  						 </div>
	  						 <div class="col-md-1">
						    	<input type="radio" name="rounds" value="5/9" ng-click="createGame.setRounds(9)">5/9
	  						 </div>
						</div>
					</div>
					<br>
					<br>
					<div class="row">
					<div class="col-md-12"><b>Please choose the time limit for each round:</b></div>
					</div>
					<div class="row">
						<div class="radio">
	  						<div class="col-md-4">
	  						</div>
	  						<div class="col-md-1">
						    	<input type="radio" name="timer" value="2" ng-click="createGame.setTimer(2)" checked>2
	  						 </div>
	  						 <div class="col-md-1">
						    	<input type="radio" name="timer" value="3" ng-click="createGame.setTimer(3)">3
	  						 </div>
	  						 <div class="col-md-1">
	  				    		<input type="radio" name="timer" value="5" ng-click="createGame.setTimer(5)">5
	  						 </div>
	  						 <div class="col-md-1">
						    	<input type="radio" name="timer" value="8" ng-click="createGame.setTimer(8)">8
	  						 </div>
	  						 <div class="col-md-1">
						    	<input type="radio" name="timer" value="10" ng-click="createGame.setTimer(10)">10
	  						 </div>
						</div>
					</div>
					<button ng-click="createGame.create()" name="creategame" type="button" class="btn btn-primary">Create game</button>
					<button	type="button" 	class="btn btn-primary">Cancel</button>
				</form>
			</div>
		</div>
	</div>
</div>
		