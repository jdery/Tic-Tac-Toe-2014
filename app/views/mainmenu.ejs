<div class="mainmenu">
	<div class="container">
		<div class="row">
			<div class="col-xs-11 col-sm-11 col-md-8 content-background">
				<div class="content-container">
					<div class="row">
						<center><h2>Main Menu {{ top.list.length }}</h2></center>
					</div>
					<div class="row">
						<div class="col-xs-6 col-sm-6 col-md-6">
							<div class="row">
								<div class="col-xs-12 col-sm-12 col-md-12">
									<h3>Options</h3>
								</div>
							</div>
							<div class="row">
								<p><b><a href="#/lobby">Go to MultiPlayer Lobby</a></b></p>
								<p><b><a href="#/avatarmenu">Avatar</a></b></p>
								<p><b><a href="#/logout">Logout</a></b></p>
	                        </div>
						</div>
						<div class="col-xs-6 col-sm-6 col-md-6">
							<div class="row">
								<div class="col-xs-12 col-sm-12 col-md-12">
									<h3 ng-click="test()">Top 10 Players</h3>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-4 col-sm-4 col-md-4 table-cell">
	                            	<b>Rank</b>
	                        	</div>
								<div class="col-xs-4 col-sm-4 col-md-4 table-cell">
	                            	<b>Player Name</b>
	                        	</div>
	                        	<div class="col-xs-4 col-sm-4 col-md-4 table-cell">
	                            	<b>W/L Ratio</b>
	                        	</div>
	                        </div>
	                        <div class="row" ng-repeat="player in top.list | orderBy:player.ratio">
								<div class="col-xs-4 col-sm-4 col-md-4 table-cell">
	                            	<b>{{ $index + 1 }}</b>
	                        	</div>
								<div class="col-xs-4 col-sm-4 col-md-4 table-cell">
	                            	<b>{{ player.username }}</b>
	                        	</div>
	                        	<div class="col-xs-4 col-sm-4 col-md-4 table-cell">
	                            	<b>{{ player.ratio }}</b>
	                        	</div>
	                        </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>