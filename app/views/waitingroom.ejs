<div class="waitingroom">
	<div class="container">
		<div class="row">
			<div class="col-xs-11 col-sm-10 col-md-8 content-background">
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12">
						<h2 class="title">Waiting for a player to join...</h2>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-5 col-sm-5 col-md-5">
						<img src="images/test-avatar.png" class="avatar"></img>
						<p><b>Mickey</b></p>
					</div>
					<div class="col-xs-2 col-sm-2 col-md-2 countdown" ng-show="waitingroom.gameStarted()" ng-controller="WRController">
						{{counter}}
					</div>
					<div class="col-xs-2 col-sm-2 col-md-2 countdown" ng-show="!waitingroom.gameStarted()">
						v.
					</div>
					<div class="col-xs-5 col-sm-5 col-md-5">
						<img src="images/unknown-player-avatar.png" class="avatar">
						<p><b>Unknow player</b></p>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12">
						<p>
							<b>Game settings:</b><br>
							0 rounds / 00:00 per round
						</p>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12">
						<form method="post" class="form-horizontal" role="form"> 
							<button	type="button" 	class="btn btn-primary">Cancel</button>
							<!-- TODO: Remove after first sprint demo -->
							<button ng-click="waitingroom.startGame()" 	type="button" 	class="btn btn-primary">Test Countdown</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
