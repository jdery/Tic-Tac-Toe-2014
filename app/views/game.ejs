<div class="game">
	<div class="container">
		<div id="processing-modal" role="dialog" aria-hidden="true" data-show="true" ng-show="game.load">
		    <div class="modal-dialog">
		        <div class="modal-content">
		            <div class="modal-body">
		                <div class="text-center">
		                    <img src="http://www.travislayne.com/images/loading.gif" class="icon" />
		                    <h4>Processing... </h4>
		                </div>
		            </div>
		        </div>
		    </div>
		</div>
		<div class="row" style="height:100%" ng-hide="game.load">
			<div class="col-xs-11 col-sm-10 col-md-8 content-background">
				<div class="content-container">
					<div class="row top">
						<div class="col-xs-4 col-sm-4 col-md-4">
							<img src="images/test-avatar.png" class="avatar"></img><br>
							<b>Player 1</b>
						</div>
						<div class="col-xs-4 col-sm-4 col-md-4">
							<font size="4em"><b>Player 1's turn</b></font><br>
							00:{{ game.settings.timer}}0 remaining<br><br>
							Round 1/{{ game.settings.rounds}}<br>
							Previous round winner: None
						</div>
						<div class="col-xs-4 col-sm-4 col-md-4">
							<img src="images/unknown-player-avatar.png" class="avatar"></img><br>
							<b>Player 2</b>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 col-sm-12 col-md-12">
							<!-- TODO: Display appropriate images in each square -->
							<table>
								<tr>
									<td class="square" valign="middle" ng-click="game.placeToken(0,0)">
										<img src="../images/{{game.grid[0][0]}}-token.png" class="img-responsive center-block" alt="Responsive image" >
									</td>
									<td class="square vertical-borders" ng-click="game.placeToken(0,1)">
										<img src="../images/{{game.grid[0][1]}}-token.png" class="img-responsive center-block" alt="Responsive image">
									</td>
									<td class="square" ng-click="game.placeToken(0,2)">
										<img src="../images/{{game.grid[0][2]}}-token.png" class="img-responsive center-block" alt="Responsive image">
									</td>
								</tr>
								<tr>
									<td class="square horizontal-borders" ng-click="game.placeToken(1,0)">
										<img src="../images/{{game.grid[1][0]}}-token.png" class="img-responsive center-block" alt="Responsive image">
									</td>
									<td class="square horizontal-borders vertical-borders" ng-click="game.placeToken(1,1)">
										<img src="../images/{{game.grid[1][1]}}-token.png" class="img-responsive center-block" alt="Responsive image">
									</td>
									<td class="square horizontal-borders" ng-click="game.placeToken(1,2)">
										<img src="../images/{{game.grid[1][2]}}-token.png" class="img-responsive center-block" alt="Responsive image">
									</td>
								</tr>
								<tr>
									<td class="square" ng-click="game.placeToken(2,0)">
										<img src="../images/{{game.grid[2][0]}}-token.png" class="img-responsive center-block" alt="Responsive image">
									</td>
									<td class="square vertical-borders" ng-click="game.placeToken(2,1)">
										<img src="../images/{{game.grid[2][1]}}-token.png" class="img-responsive center-block" alt="Responsive image">
									</td>
									<td class="square" ng-click="game.placeToken(2,2)">
										<img src="../images/{{game.grid[2][2]}}-token.png" class="img-responsive center-block" alt="Responsive image">
									</td>
								</tr>
							</table>
						</div>
					</div>
					<div class="row bottom">
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <b>Winning Message</b>
                        </div>
						<div class="col-xs-4 col-sm-4 col-md-4">
							<form method="post" class="form-horizontal" role="form"> 
								<button	ng-click="game.exitGame()" type="button" 	class="btn btn-primary">Quit Game</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>