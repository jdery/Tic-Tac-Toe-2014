<div class="lobby">
	<div class="container">
		<div class="row">
			<div class="col-xs-11 col-sm-11 col-md-8 content-background">
				<div class="content-container">
					<div class="row">
						<h2>Welcome to the game lobby</h2>
					</div>
					<div class="row">
						<div class="col-xs-6 col-sm-6 col-md-6">
							<div class="row">
								<div class="col-xs-12 col-sm-12 col-md-12">
									<h3>Available Games</h3>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-3 col-sm-3 col-md-3 table-cell">
	                            	<b>Host</b>
	                            </div>
	                            <div class="col-xs-3 col-sm-3 col-md-3 table-cell">
	                                <b>Rounds</b>
	                            </div>
	                            <div class="col-xs-3 col-sm-3 col-md-3 table-cell">
	                                <b>Time</b>
	                            </div>
	                            <div class="col-xs-3 col-sm-3 col-md-3 table-cell">
	                                <b>Join</b>
	                            </div>
		                    </div>
		                    <div class="row game" ng-repeat="game in lobby.games" ng-show="game.waiting">
								<div class="col-xs-3 col-sm-3 col-md-3 table-cell">
									{{ game.creator }}
								</div>
								<div class="col-xs-3 col-sm-3 col-md-3 table-cell">
									{{ game.rounds }}
								</div>
								<div class="col-xs-3 col-sm-3 col-md-3 table-cell">
									{{ game.time }}
								</div>
								<div class="col-xs-3 col-sm-3 col-md-3 table-cell">
									<a href="" ng-click="lobby.joinGame(game)" class="text-right">Join</a>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-12 col-sm-12 col-md-12">
									<h3 style="padding-top: 1em">Online Players</h3>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-6 col-sm-6 col-md-6 table-cell">
						        	<b>Player Name</b>
						    	</div>
						    	<div class="col-xs-6 col-sm-6 col-md-6 table-cell">
						        	<b>Player Score</b>
						    	</div>
						    </div>
							<div class="row" ng-repeat="player in lobby.players">
								<div class="col-xs-6 col-sm-6 col-md-6 table-cell">
									{{ player.username }}
								</div>
								<div class="col-xs-6 col-sm-6 col-md-6 table-cell">
									{{ player.score }}
								</div>
							</div>
						</div>
						<div class="col-xs-6 col-sm-6 col-md-6">
							<div class="row">
								<div class="col-xs-12 col-sm-12 col-md-12">
									<h3>Chat</h3>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-12 col-sm-12 col-md-12 chat-box">
									<ul class="chat">
										<li ng-repeat=" msg in lobby.messages"> {{ msg.user }} > {{ msg.msg}}</li>
										<li ng-hide="lobby.messages.length">No message, be the first!</li>
									</ul>
	                        	</div>
	                        </div>
	                        <div class="row">
								<div class="col-xs-12 col-sm-12 col-md-12">
									<input type="text" name="chatmessage" class="form-control" ng-model="lobby.newMsg">
									<button ng-click="lobby.sendMessages()" type="button" class="btn btn-default">Send</button>
	                        	</div>
	                        </div>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 col-sm-12 col-md-12">
							<form method="post" class="form-horizontal" role="form">
								<button ng-click="lobby.mainmenu()" name="login" type="button" 	class="btn btn-primary">Main Menu</button>
								<button ng-click="lobby.creategame()" name="creategame" type="button" class="btn btn-primary">Create a Game</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

